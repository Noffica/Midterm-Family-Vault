<div class="container">

  <!-- User adds new content -->
  <div>
    <p>+ Add new:</p>
    <select onChange="window.location.href=this.value">
      <option value="">+ Add New</option>
      <option value="user/photo_post/new">Photo</option>
      <option value="user/text_post/new">Text</option>
      <option value="/vault/new">Vault</option>
    </select>
  </div>

  <!-- Show content from users all vaults -->
  <div>
    <div class="row">
    <% if @text_posts %>
      <% @text_posts.each do |text_post| %>
        <!-- <div class="row"> -->
          <div class="col s12 m6">
            <div class="card white hoverable">

                <div class="card-content">
                  <span class="card-title cyan-text"><%=  text_post[:title] %></span>
                  <p><%= text_post[:body] %></p>
                </div>

                <div class="card-action cyan white-text">
                  <p>User: <%=  User.find(text_post[:user_id]).name %> </p>
                  <p>Created at: <%= text_post[:created_at] %></p>
                </div>

            </div>
          </div>
        <!-- </div> -->
      <% end %>
    <% end %>
    </div>
  </div>

